<script type="text/javascript">
  $(function(){
    <% if(error){ %>
      var errorType = "<%= error %>";
      switch(errorType){
        case "ERR_NSU":
          $("#myAlert #err-msg").text("用户不存在哦~");
          console.log("hehe1")
        break;
        case "ERR_PWD":
          $("#myAlert #err-msg").text("密码输错了哦~");
        break;
      }
      $("#myAlert").removeClass("hidden");
      console.log("hehe");
    <%}%>
  })
</script>

